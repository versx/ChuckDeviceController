@model Todo
@{
    ViewData["Title"] = "Edit Todo " + Model?.Name;
}

<h1>Edit Todo</h1>

<p>@Html.ValidationMessage("Todo", new { @class = "text-danger" })</p>

<br />
@Html.DisplayFor(model => model, "Breadcrumbs", new { Controller = "Todo", ControllerText = "Todos", CurrentPage = "Edit Todo" })

<h4>Todo '@(Model?.Name)'</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" readonly />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="checkbox">
                <label><input type="checkbox" asp-for="IsComplete"> Is Complete</label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}