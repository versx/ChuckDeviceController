@using PogoEventsPlugin.Utilities
@model ActiveEvent
@{
    ViewData["Title"] = "Delete Pokemon Go Event " + Model.Name;
}

<h1>Delete Pokemon Event</h1>

<p>@Html.ValidationMessage("Event", new { @class="text-danger" })</p>

<br />
@Html.DisplayFor(model => model, "Breadcrumbs", new { Controller = "Event", ControllerText = "Pokemon Events", CurrentPage = "Delete Event" })

<h3>Are you sure you want to delete this event?</h3>
<div>
    <h4>Pokemon Go Event '@Model?.Name'</h4>
    <div>
        <form asp-action="Delete">
            <input type="hidden" asp-for="Name" />
            <input type="submit" value="Yes" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">No</a>
        </form>
    </div>
</div>

<hr />
@Html.DisplayForModel("EventDetails")