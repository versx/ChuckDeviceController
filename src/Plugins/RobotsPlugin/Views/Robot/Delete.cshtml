@model CustomUserAgentViewModel
@{
    ViewData["Title"] = "Delete Robot Route " + Model?.UserAgent;
}

<h1>Delete Robot Route</h1>

<p>@Html.ValidationMessage("Robot", new { @class = "text-danger" })</p>

<br />
<nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
        <li class="breadcrumb-item"><a asp-controller="Robot" asp-action="Index">Robots</a></li>
        <li class="breadcrumb-item active" aria-current="page">Delete Robot</li>
    </ol>
</nav>

<h3>Are you sure you want to delete this user agent?</h3>
<div>
    <h4>User Agent '@Model?.UserAgent'</h4>
    <div>
        <form asp-action="Delete">
            <input type="hidden" asp-for="UserAgent" />
            <input type="hidden" asp-for="Route" />
            <input type="submit" value="Yes" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">No</a>
        </form>
    </div>
</div>

<hr />
<dl class="row">
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.UserAgent)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.UserAgent)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Route)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Route)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Comment)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Comment)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.IsAllowed)
    </dt>
    <dd class="col-sm-10">
        @(Model?.IsAllowed ?? false ? "Yes" : "No")
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.IsCustom)
    </dt>
    <dd class="col-sm-10">
        @(Model?.IsCustom ?? false ? "Yes" : "No")
    </dd>
</dl>