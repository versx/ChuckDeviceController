@model IvList
@{
    ViewData["Title"] = localizer["Create IV List"];
}

<h1>@ViewData["Title"]</h1>

<p>@Html.ValidationMessage("IvList", new { @class = "text-danger" })</p>

<br />
@Html.DisplayFor(model => model, "Breadcrumbs", new { Controller = "IvList", ControllerText = localizer["IV Lists"], CurrentPage = ViewData["Title"] })

<form asp-action="Create">
    <div class="pb-4">
        <div class="float-start">
            <h4>@localizer["IV List"]</h4>
        </div>
        <div class="float-end">
            <button type="button" class="btn btn-primary btn-sm" onclick="generateIvList();">
                <i class="fa-solid fa-cog"></i>&nbsp;@localizer["Generate"]
            </button>
            &nbsp;
            <button type="submit" class="btn btn-primary btn-sm">
                <i class="fa-solid fa-floppy-disk"></i>&nbsp;@localizer["Create"]
            </button>
        </div>
    </div>
    <hr />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-floating mb-3">
        <input asp-for="Name" class="form-control" placeholder="IV list name" />
        <label asp-for="Name"></label>
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    @Html.EditorForModel("EditIvListDetails")
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="/js/priority-list-generator.js"></script>
}