@model IvList
@{
    ViewData["Title"] = "Edit IV List " + Model?.Name;
    var pokemonIds = string.Join(",", (Model?.PokemonIds ?? new()));
}

<h1>Edit IV List</h1>

<p>@Html.ValidationMessage("IvList", new { @class = "text-danger" })</p>

<br />
@Html.DisplayFor(model => model, "Breadcrumbs", new { Controller = "IvList", ControllerText = "IV Lists", CurrentPage = "Edit IV List" })

<h4>IV List '@(Model?.Name)'</h4>
<hr />
<div class="row">
    <div class="col">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="Name" class="form-control" placeholder="IV list name" readonly />
                <label asp-for="Name"></label>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group" hidden>
                <textarea id="PokemonIds" name="PokemonIds" class="form-control" rows="2" placeholder="IV list pokemon IDs">@pokemonIds</textarea>
                <label asp-for="PokemonIds"></label>
                <span asp-validation-for="PokemonIds" class="text-danger"></span>
            </div>
            @await Html.PartialAsync("_PokemonSelectorPartial", ViewData["Pokemon"])
            <br />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}