@model IvList
@{
    ViewData["Title"] = localizer["Delete IV List {0}", Model.Name];
}

<h1>@localizer["Delete IV List"]</h1>

<p>@Html.ValidationMessage("IvList", new { @class = "text-danger" })</p>

<br />
@Html.DisplayFor(model => model, "Breadcrumbs", new { Controller = "IvList", ControllerText = localizer["IV Lists"], CurrentPage = localizer["Delete IV List"] })

<h3>
    @localizer["Are you sure you want to delete this IV list?"]</h3>
<div>
    <h4>@localizer["IV List '{0}'", Model.Name]</h4>
    <div>
        <form asp-action="Delete">
            <input type="hidden" asp-for="Name" />
            <input type="submit" value="@localizer["Yes"]" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">@localizer["No"]</a>
        </form>
    </div>
</div>

<hr />
@Html.DisplayForModel("IvListDetails")