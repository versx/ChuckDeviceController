@using ChuckDeviceConfigurator.Localization
@model IvList

<dl class="row">
    <dt class = "col-sm-2">
        @Html.DisplayNameFor(model => model.Name)
    </dt>
    <dd class = "col-sm-10">
        @Html.DisplayFor(model => model.Name)
    </dd>
    <dt class = "col-sm-2">
        @Html.DisplayNameFor(model => model.PokemonIds)
    </dt>
    <dd class = "col-sm-10">
        @if ((Model?.PokemonIds?.Count ?? 0) > 0)
        {
            <ul class="list-group">
                @* TODO: Limit Pokemon ids to 25ish *@
                @foreach (var pokemonId in Model?.PokemonIds ?? new())
                {
                    var pokeId = Convert.ToUInt32(pokemonId);
                    var icon = Utils.GetPokemonIcon(pokeId, "32", "32", html: true);
                    var name = Translator.Instance.GetPokemonName(pokeId);
                    <li class="list-group-item">@Html.Raw($"{icon}&nbsp;{name} (#{pokeId})")</li>
                }
            </ul>
        }
        else
        {
            <p>None</p>
        }
    </dd>
</dl>