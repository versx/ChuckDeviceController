@model Account
@{
    ViewData["Title"] = localizer["Delete Account {0}", Model.Username];
}

<h1>@localizer["Delete Account"]</h1>

<p>@Html.ValidationMessage("Account", new { @class = "text-danger" })</p>

<br />
@Html.DisplayFor(model => model, "Breadcrumbs", new { Controller = "Account", ControllerText = localizer["Accounts"], CurrentPage = localizer["Delete Account"] })

<h3>@localizer["Are you sure you want to delete this account?"]</h3>
<div>
    <h4>@localizer["Account '{0}'", Model.Username]</h4>
    <div>
        <form asp-action="Delete">
            <input type="hidden" asp-for="Username" />
            <input type="submit" value="@localizer["Yes"]" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">@localizer["No"]</a>
        </form>
    </div>
</div>

<hr />
@Html.DisplayForModel("AccountDetails")