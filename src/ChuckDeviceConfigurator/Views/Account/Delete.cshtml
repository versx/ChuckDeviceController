@model Account
@{
    ViewData["Title"] = "Delete Account " + Model.Username;
}

<h1>Delete Account</h1>

<p>@Html.ValidationMessage("Account", new { @class = "text-danger" })</p>

<br />
@Html.DisplayFor(model => model, "Breadcrumbs", new { Controller = "Account", ControllerText = "Accounts", CurrentPage = "Delete Account" })

<h3>Are you sure you want to delete this account?</h3>
<div>
    <h4>Account '@Model?.Username'</h4>
    <div>
        <form asp-action="Delete">
            <input type="hidden" asp-for="Username" />
            <input type="submit" value="Yes" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">No</a>
        </form>
    </div>
</div>

<hr />
@Html.DisplayForModel("AccountDetails")