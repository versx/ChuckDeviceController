@model AddAccountsViewModel
@{
    ViewData["Title"] = "Import Accounts";
}

<h1>Import Accounts</h1>

<p>@Html.ValidationMessage("Account", new { @class = "text-danger" })</p>

<br />
@Html.DisplayFor(model => model, "Breadcrumbs", new { Controller = "Account", ControllerText = "Accounts", CurrentPage = "Import Accounts" })

<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Add">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating mb-3">
                <input asp-for="Level" class="form-control" min="0" max="50" placeholder="Account level" />
                <label asp-for="Level"></label>
                <span asp-validation-for="Level" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <textarea asp-for="Accounts" class="form-control" rows="10" placeholder="Accounts"></textarea>
                <label asp-for="Accounts"></label> <small class="text-muted"><i>(newline for each account)</i></small>
                <span asp-validation-for="Accounts" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Group" class="form-control" placeholder="Account group" />
                <label asp-for="Group"></label>
                <span asp-validation-for="Group" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}