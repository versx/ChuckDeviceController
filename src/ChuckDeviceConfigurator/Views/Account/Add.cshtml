@model AddAccountsViewModel
@{
    ViewData["Title"] = localizer["Import Accounts"];
}

<h1>@ViewData["Title"]</h1>

<p>@Html.ValidationMessage("Account", new { @class = "text-danger" })</p>

<br />
@Html.DisplayFor(model => model, "Breadcrumbs", new { Controller = "Account", ControllerText = localizer["Accounts"], CurrentPage = ViewData["Title"] })

<hr />

<div class="alert alert-primary mb-3" role="alert">
    <span class="text-muted">@localizer["Supported Delimiters:"]</span><br /><code>, ; :</code>
</div>

<form asp-action="Add">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-floating mb-3">
        <input asp-for="Level" class="form-control" min="0" max="50" placeholder="Account level" />
        <label asp-for="Level"></label>
        <span asp-validation-for="Level" class="text-danger"></span>
    </div>
    <div class="form-floating mb-3">
        <textarea asp-for="Accounts" class="form-control" rows="10" placeholder="Supported Delimiters: ; : ,"></textarea>
        <label asp-for="Accounts"></label> <small class="text-muted"><i>@localizer["Each account should be on a newline"]</i></small>
        <span asp-validation-for="Accounts" class="text-danger"></span>
    </div>
    <div class="form-floating mb-3">
        <input asp-for="Group" class="form-control" placeholder="Account group" />
        <label asp-for="Group"></label>
        <span asp-validation-for="Group" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="@localizer["Add"]" class="btn btn-primary" />
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}