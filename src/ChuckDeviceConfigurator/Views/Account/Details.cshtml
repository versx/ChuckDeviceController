@model Account
@{
    ViewData["Title"] = localizer["Account Details {0}", Model.Username];
}

<h1>@localizer["Account Details"]</h1>

<p>@Html.ValidationMessage("Account", new { @class = "text-danger" })</p>

<br />
@Html.DisplayFor(model => model, "Breadcrumbs", new { Controller = "Account", ControllerText = localizer["Accounts"], CurrentPage = localizer["Account Details"] })

@await Html.PartialAsync("_ManageButtons", new { Title = localizer["Account '{0}'", Model!.Username], Name = Model.Username, Controller = "Account" })
<br />

<hr />
@Html.DisplayForModel("AccountDetails")