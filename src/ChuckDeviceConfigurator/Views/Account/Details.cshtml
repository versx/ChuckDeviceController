@model Account
@{
    ViewData["Title"] = localizer["Account Details {0}", Model.Username];
}

<h1>@localizer["Account Details"]</h1>

<p>@Html.ValidationMessage("Account", new { @class = "text-danger" })</p>

<br />
@Html.DisplayFor(model => model, "Breadcrumbs", new { Controller = "Account", ControllerText = localizer["Accounts"], CurrentPage = localizer["Account Details"] })

<div class="mb-4">
    <div class="float-start">
        <h4>@localizer["Account '{0}'", Model.Username]</h4>
    </div>
    <div class="float-end">
        <a asp-action="Edit" asp-route-id="@Model?.Username" class="btn btn-primary">
            <i class="fa-solid fa-pen-to-square"></i>&nbsp;@localizer["Edit"]
        </a>
        <a asp-action="Delete" asp-route-id="@Model?.Username" class="btn btn-danger">
            <i class="fa-solid fa-trash"></i>&nbsp;@localizer["Delete"]
        </a>
    </div>
</div>
<br />

<hr />
@Html.DisplayForModel("AccountDetails")