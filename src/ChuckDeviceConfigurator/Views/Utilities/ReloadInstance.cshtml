@{
    ViewData["Title"] = localizer["Utilities - Reload Instance"];
}

<h1>@localizer["Utilities"]</h1>

<p>@Html.ValidationMessage("Utilities", new { @class = "text-danger" })</p>

<h4>
    @localizer["Reload Instance"]</h4>

<p>
    @localizer["Reloading an instance will reset all variables, caches, statistics, etc for the job controller instance as if it was just started."]
</p>

<br />
@Html.DisplayFor(model => model, "Breadcrumbs", new { Controller = "Utilities", ControllerText = localizer["Utilities"], CurrentPage = localizer["Reload Instance"] })

<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-controller="Utilities" asp-action="ReloadInstance">
            <div class="form-floating mb-3">
                <select id="InstanceName" name="InstanceName" class="form-control" asp-items="@(new SelectList(ViewBag.Instances, "Name", "Name"))">
                    <option value="">@localizer["Please select an instance"]</option>
                </select>
                <label for="InstanceName">@localizer["Instance"]</label>
                <span validation-for="InstanceName" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <input type="submit" value="@localizer["Reload Instance"]" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}