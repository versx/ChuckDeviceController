@model DeviceGroup
@{
    ViewData["Title"] = localizer["Edit Device Group {0}", Model.Name];
}

<h1>@localizer["Edit Device Group"]</h1>

<p>@Html.ValidationMessage("DeviceGroup", new { @class = "text-danger" })</p>

<br />
@Html.DisplayFor(model => model, "Breadcrumbs", new { Controller = "DeviceGroup", ControllerText = localizer["Device Groups"], CurrentPage = localizer["Edit Device Group"] })

<h4>@localizer["Device Group '{0}'", Model.Name]</h4>
<hr />
<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-floating mb-3">
        <input asp-for="Name" class="form-control" placeholder="Device group name" readonly />
        <label asp-for="Name"></label>
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="DeviceUuids"></label>
        <select asp-for="DeviceUuids" class="form-control" asp-items="@(new SelectList(ViewBag.Devices, "Uuid", "Uuid"))" placeholder="Device group devices">
        </select>
        <span asp-validation-for="DeviceUuids" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="@localizer["Save"]" class="btn btn-primary" />
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}