@model DeviceGroup
@{
    ViewData["Title"] = "Delete Device Group " + Model.Name;
}

<h1>Delete Device Group</h1>

<p>@Html.ValidationMessage("DeviceGroup", new { @class = "text-danger" })</p>

<br />
@Html.DisplayFor(model => model, "Breadcrumbs", new { Controller = "DeviceGroup", ControllerText = "Device Groups", CurrentPage = "Delete Device Group" })

<h3>Are you sure you want to delete this device group?</h3>
<div>
    <h4>Device Group '@Model?.Name'</h4>
    <div>
        <form asp-action="Delete">
            <input type="hidden" asp-for="Name" />
            <input type="submit" value="Yes" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">No</a>
        </form>
    </div>
</div>

<hr />
@Html.DisplayForModel("DeviceGroupDetails")