@model DeviceGroup
@{
    ViewData["Title"] = localizer["Delete Device Group {0}", Model.Name];
}

<h1>@localizer["Delete Device Group"]</h1>

<p>@Html.ValidationMessage("DeviceGroup", new { @class = "text-danger" })</p>

<br />
@Html.DisplayFor(model => model, "Breadcrumbs", new { Controller = "DeviceGroup", ControllerText = localizer["Device Groups"], CurrentPage = localizer["Delete Device Group"] })

<h3>@localizer["Are you sure you want to delete this device group?"]</h3>
<div>
    <h4>@localizer["Device Group '{0}'", Model.Name]</h4>
    <div>
        <form asp-action="Delete">
            <input type="hidden" asp-for="Name" />
            <input type="submit" value="@localizer["Yes"]" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">@localizer["No"]</a>
        </form>
    </div>
</div>

<hr />
@Html.DisplayForModel("DeviceGroupDetails")