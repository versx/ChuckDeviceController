@model InstanceDetailsViewModel
@{
    ViewData["Title"] = localizer["Instance Details {0}", Model.Name];
}

<h1>@localizer["Instance Details"]</h1>

<p>@Html.ValidationMessage("Instance", new { @class = "text-danger" })</p>

<br />
@Html.DisplayFor(model => model, "Breadcrumbs", new { Controller = "Instance", ControllerText = localizer["Instances"], CurrentPage = localizer["Instance Details"] })

@await Html.PartialAsync("_ManageButtons", new { Title = localizer["Instance '{0}'", Model.Name], Name = Model.Name, Controller = "Instance" })
<br />

<hr />
@Html.DisplayForModel("InstanceDetails")