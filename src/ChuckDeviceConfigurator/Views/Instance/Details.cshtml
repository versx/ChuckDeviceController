@model InstanceDetailsViewModel
@{
    ViewData["Title"] = localizer["Instance Details"] + " " + Model?.Name;
}

<h1>@localizer["Instance Details"]</h1>

<p>@Html.ValidationMessage("Instance", new { @class = "text-danger" })</p>

<br />
@Html.DisplayFor(model => model, "Breadcrumbs", new { Controller = localizer["Instance"], ControllerText = localizer["Instances"], CurrentPage = localizer["Instance Details"] })

<div>
    <h4>@localizer["Instance"] '@Model?.Name'</h4>
    <div>
        <a asp-action="Edit" asp-route-id="@Model?.Name" class="btn btn-primary">
            <i class="fa-solid fa-pen-to-square"></i>&nbsp;@localizer["Edit"]
        </a>
        <a asp-action="Delete" asp-route-id="@Model?.Name" class="btn btn-danger">
            <i class="fa-solid fa-trash"></i>&nbsp;@localizer["Delete"]
        </a>
    </div>
</div>

<hr />
@Html.DisplayForModel("InstanceDetails")