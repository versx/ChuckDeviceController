@model InstanceDetailsViewModel
@{
    ViewData["Title"] = localizer["Delete Instance"] + " " + Model.Name;
}

<h1>@localizer["Delete Instance"]</h1>

<p>@Html.ValidationMessage("Instance", new { @class = "text-danger" })</p>

<br />
@Html.DisplayFor(model => model, "Breadcrumbs", new { Controller = localizer["Instance"], ControllerText = localizer["Instances"], CurrentPage = localizer["Delete Instance"] })

<h3>@localizer["Are you sure you want to delete this instance?"]</h3>
<div>
    <h4>@localizer["Instance"] '@Model?.Name'</h4>
    <div>
        <form asp-action="Delete">
            <input type="hidden" asp-for="Name" />
            <input type="submit" value="@localizer["Yes"]" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">@localizer["No"]</a>
        </form>
    </div>
</div>

<hr />
@Html.DisplayForModel("InstanceDetails")