@model AssignmentGroup
@{
    ViewData["Title"] = "Create Assignment Group";
}

<h1>@ViewData["Title"]</h1>

<p>@Html.ValidationMessage("AssignmentGroup", new { @class = "text-danger" })</p>

<br />
@Html.DisplayFor(model => model, "Breadcrumbs", new { Controller = "AssignmentGroup", ControllerText = "Assignment Groups", CurrentPage = "Create Assignment Group" })

<h4>Assignment Group</h4>
<hr />
<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-floating mb-3">
        <input asp-for="Name" class="form-control" placeholder="Assignment group name" />
        <label asp-for="Name"></label>
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="AssignmentIds"></label>
        <select asp-for="AssignmentIds" class="form-control" asp-items="@(ViewBag.Assignments)" placeholder="Assignment group assignments">
            <option value="" disabled selected>Please select one or more</option>
        </select>
        <span asp-validation-for="AssignmentIds" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}