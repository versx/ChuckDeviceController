@model AssignmentGroup
@{
    ViewData["Title"] = localizer["Delete Assignment Group {0}", Model.Name];
}

<h1>@localizer["Delete Assignment Group"]</h1>

<p>@Html.ValidationMessage("AssignmentGroup", new { @class = "text-danger" })</p>

<br />
@Html.DisplayFor(model => model, "Breadcrumbs", new { Controller = "AssignmentGroup", ControllerText = localizer["Assignment Groups"], CurrentPage = localizer["Delete Assignment Group"] })

<h3>@localizer["Are you sure you want to delete this assignment group?"]</h3>
<div>
    <h4>@localizer["Assignment Group '{0}'", Model.Name]</h4>
    <div>
        <form asp-action="Delete">
            <input type="hidden" asp-for="Name" />
            <input type="submit" value="@localizer["Yes"]" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">@localizer["No"]</a>
        </form>
    </div>
</div>

<hr />
@Html.DisplayForModel("AssignmentGroupDetails")