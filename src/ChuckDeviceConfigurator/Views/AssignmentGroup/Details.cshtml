@model AssignmentGroup
@{
    ViewData["Title"] = localizer["Assignment Group Details {0}", Model.Name];
}

<h1>@localizer["Assignment Group Details"]</h1>

<p>@Html.ValidationMessage("AssignmentGroup", new { @class = "text-danger" })</p>

<br />
@Html.DisplayFor(model => model, "Breadcrumbs", new { Controller = "AssignmentGroup", ControllerText = localizer["Assignment Groups"], CurrentPage = localizer["Assignment Group Details"] })

<div class="mb-4">
    <div class="float-start">
        <h4>@localizer["Assignment Group '{0}'", Model.Name]</h4>
    </div>
    <div class="float-end">
        <a asp-action="Start" asp-route-id="@Model?.Name" class="btn btn-success btn-sm">
            <i class="fa-solid fa-play"></i>&nbsp;@localizer["Start"]
        </a>
        @if (ViewBag?.HasQuestInstance ?? false)
        {
            <a asp-action="ReQuest" asp-route-id="@Model?.Name" class="btn btn-warning btn-sm">
                <i class="fa-solid fa-arrows-rotate"></i>&nbsp;@localizer["Re-Quest"]
            </a>
        }
        <a asp-action="Edit" asp-route-id="@Model?.Name" class="btn btn-primary btn-sm">
            <i class="fa-solid fa-pen-to-square"></i>&nbsp;@localizer["Edit"]
        </a>
        <a asp-action="Delete" asp-route-id="@Model?.Name" class="btn btn-danger btn-sm">
            <i class="fa-solid fa-trash"></i>&nbsp;@localizer["Delete"]
        </a>
    </div>
</div>
<br />

<hr />
@Html.DisplayForModel("AssignmentGroupDetails")