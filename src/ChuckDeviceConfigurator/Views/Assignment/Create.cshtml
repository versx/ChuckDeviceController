@model Assignment
@{
    ViewData["Title"] = "Create Assignment";
}

<h1>@ViewData["Title"]</h1>

<p>@Html.ValidationMessage("Assignment", new { @class = "text-danger" })</p>

<br />
@Html.DisplayFor(model => model, "Breadcrumbs", new { Controller = "Assignment", ControllerText = "Assignments", CurrentPage = "Create Assignment" })

<h4>Assignment</h4>
<hr />
<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-floating mb-3">
        <select asp-for="DeviceUuid" class="form-control" asp-items="@(ViewBag.Devices)" placeholder="Assignment device UUID">
            <option value="" disabled selected>Please select one</option>
        </select>
        <label asp-for="DeviceUuid"></label>
        <span asp-validation-for="DeviceUuid" class="text-danger"></span>
    </div>
    <div class="form-floating mb-3">
        <select asp-for="SourceInstanceName" class="form-control" asp-items="@(new SelectList(ViewBag.Instances, "Name", "Name"))" placeholder="Assignment source instance">
            <option value="" disabled selected>Please select one</option>
        </select>
        <label asp-for="SourceInstanceName"></label>
        <span asp-validation-for="SourceInstanceName" class="text-danger"></span>
    </div>
    <div class="form-floating mb-3">
        <select asp-for="InstanceName" class="form-control" asp-items="@(new SelectList(ViewBag.Instances, "Name", "Name"))" placeholder="Assignment instance">
            <option value="" disabled selected>Please select one</option>
        </select>
        <label asp-for="InstanceName"></label>
        <span asp-validation-for="InstanceName" class="text-danger"></span>
    </div>
    <div class="form-floating mb-3">
        <input asp-for="Time" class="form-control" type="time" placeholder="Assignment time" />
        <label asp-for="Time"></label> <small class="text-muted"><i>Set to 12am to create "On-Complete" assignment</i></small>
        <span asp-validation-for="Time" class="text-danger"></span>
    </div>
    <div class="form-floating mb-3">
        <input asp-for="Date" class="form-control" type="date" placeholder="Assignment date" />
        <label asp-for="Date"></label> <small class="text-muted"><i>Leave empty for any date</i></small>
        <span asp-validation-for="Date" class="text-danger"></span>
    </div>
    <div class="checkbox">
        <label><input type="checkbox" id="OnComplete" name="OnComplete" value="true"> Create On-Complete Assignment</label>
    </div>
    <div class="checkbox">
        <label><input type="checkbox" asp-for="Enabled" value="true" checked> Is Enabled</label>
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}