@model Assignment
@{
    ViewData["Title"] = localizer["Delete Assignment {0}", Model.Id];
}

<h1>@localizer["Delete Assignment"]</h1>

<p>@Html.ValidationMessage("Assignment", new { @class = "text-danger" })</p>

<br />
@Html.DisplayFor(model => model, "Breadcrumbs", new { Controller = "Assignment", ControllerText = localizer["Assignments"], CurrentPage = localizer["Delete Assignment"] })

<h3>@localizer["Are you sure you want to delete this assignment?"]</h3>
<div>
    <h4>@localizer["Assignment '{0}'", Model.Id]</h4>
    <div>
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="@localizer["Yes"]" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">@localizer["No"]</a>
        </form>
    </div>
</div>

<hr />
@Html.DisplayForModel("AssignmentDetails")