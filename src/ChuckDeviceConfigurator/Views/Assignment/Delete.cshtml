@model Assignment
@{
    ViewData["Title"] = "Delete Assignment " + Model?.Id;
}

<h1>Delete Assignment</h1>

<p>@Html.ValidationMessage("Assignment", new { @class = "text-danger" })</p>

<br />
@Html.DisplayFor(model => model, "Breadcrumbs", new { Controller = "Assignment", ControllerText = "Assignments", CurrentPage = "Delete Assignment" })

<h3>Are you sure you want to delete this assignment?</h3>
<div>
    <h4>Assignment '@Model?.Id'</h4>
    <div>
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Yes" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">No</a>
        </form>
    </div>
</div>

<hr />
@Html.DisplayForModel("AssignmentDetails")