@using ChuckDeviceConfigurator.Data;
@model ApplicationUser
@{
    ViewData["Title"] = localizer["Delete User Account {0}", Model.UserName!];
}

<h1>@localizer["Delete User Account"]</h1>

<br />
@Html.DisplayFor(model => model, "Breadcrumbs", new { Controller = "User", ControllerText = localizer["Users"], CurrentPage = localizer["Delete User Account"] })

<p>@Html.ValidationMessage("User", new { @class = "text-danger" })</p>

<h3>@localizer["Are you sure you want to delete this user account?"]</h3>
<div>
    <h4>@localizer["User Account '{0}'", Model.UserName!]</h4>
    <div>
        <form asp-action="Delete" asp-route-userId="@Model?.Id">
            <input type="submit" value="Yes" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">No</a>
        </form>
    </div>
</div>

<hr />
<dl class="row">
    <dt class = "col-sm-2">
        @Html.DisplayNameFor(model => model.Id)
    </dt>
    <dd class = "col-sm-10">
        @Html.DisplayFor(model => model.Id)
    </dd>
    <dt class = "col-sm-2">
        @Html.DisplayNameFor(model => model.UserName)
    </dt>
    <dd class = "col-sm-10">
        @Html.DisplayFor(model => model.UserName)
    </dd>
    <dt class = "col-sm-2">
        @Html.DisplayNameFor(model => model.Email)
    </dt>
    <dd class = "col-sm-10">
        @Html.DisplayFor(model => model.Email)
    </dd>
</dl>