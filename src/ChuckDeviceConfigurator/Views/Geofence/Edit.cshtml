@model Geofence
@{
    ViewData["Title"] = "Edit Geofence " + Model?.Name;
}

<h1>Edit Geofence</h1>

<p>@Html.ValidationMessage("Geofence", new { @class = "text-danger" })</p>

<br />
@Html.DisplayFor(model => model, "Breadcrumbs", new { Controller = "Geofence", ControllerText = "Geofences", CurrentPage = "Edit Geofence" })

<h4>Geofence '@(Model?.Name)'</h4>
<hr />
<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row">
        <div class="col col-5">
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" readonly />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="col col-5">
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <select asp-for="Type" class="form-control" asp-items="Html.GetEnumSelectList<GeofenceType>()">
                </select>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
        </div>
        <div class="col col-2">
            <input type="submit" value="Save" class="btn btn-primary float-end" />
        </div>
    </div>
    <div class="form-group" hidden>
        <label asp-for="Data.Area" class="control-label"></label>
        <textarea asp-for="Data.Area" class="form-control" rows="30"></textarea>
        <span asp-validation-for="Data.Area" class="text-danger"></span>
    </div>
</form>
<br />

@await Html.PartialAsync("_GeofenceRouteGeneratorPartial")

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
<script>
    $('#Type').on('change', setGeofence);
    let type = $('#Type').val();
    let area = "@Model?.Data?.Area";
    if (type === 0) {
        // Circles
        loadCircles(area);
    } else {
        // Geofences
        setReturnGeofenceType(true);
        loadGeofence(area, true);
    }
</script>
}