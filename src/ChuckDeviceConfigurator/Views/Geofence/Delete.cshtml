@model Geofence
@{
    ViewData["Title"] = "Delete Geofence " + Model?.Name;
}

<h1>Delete Geofence</h1>

<p>@Html.ValidationMessage("Geofence", new { @class = "text-danger" })</p>

<br />
@Html.DisplayFor(model => model, "Breadcrumbs", new { Controller = "Geofence", ControllerText = "Geofences", CurrentPage = "Delete Geofence" })

<h3>Are you sure you want to delete this geofence?</h3>
<div>
    <h4>Geofence '@Model?.Name'</h4>
    <div>
        <form asp-action="Delete">
            <input type="hidden" asp-for="Name" />
            <input type="submit" value="Yes" class="btn btn-danger btn-sm" />
            <a asp-action="Index" class="btn btn-secondary btn-sm">No</a>
        </form>
    </div>
</div>

<hr />
@Html.DisplayForModel("GeofenceDetails")