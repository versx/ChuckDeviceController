@model Geofence
@{
    ViewData["Title"] = localizer["Delete Geofence {0}", Model.Name];
}

<h1>
    @localizer["Delete Geofence"]</h1>

<p>@Html.ValidationMessage("Geofence", new { @class = "text-danger" })</p>

<br />
@Html.DisplayFor(model => model, "Breadcrumbs", new { Controller = "Geofence", ControllerText = localizer["Geofences"], CurrentPage = localizer["Delete Geofence"] })

<h3>@localizer["Are you sure you want to delete this geofence?"]</h3>
<div>
    <h4>@localizer["Geofence '{0}'", Model.Name]</h4>
    <div>
        <form asp-action="Delete">
            <input type="hidden" asp-for="Name" />
            <input type="submit" value="@localizer["Yes"]" class="btn btn-danger btn-sm" />
            <a asp-action="Index" class="btn btn-secondary btn-sm">@localizer["No"]</a>
        </form>
    </div>
</div>

<hr />
@Html.DisplayForModel("GeofenceDetails")