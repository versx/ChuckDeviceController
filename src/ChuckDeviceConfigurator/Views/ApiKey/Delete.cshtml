@model ManageApiKeyViewModel
@{
    ViewData["Title"] = "Delete API Key " + Model.Name;
}

<h1>Delete API Key</h1>

<p>@Html.ValidationMessage("ApiKey", new { @class = "text-danger" })</p>

<br />
@Html.DisplayFor(model => model, "Breadcrumbs", new { Controller = "ApiKey", ControllerText = "API Keys", CurrentPage = "Delete API Key" })

<h3>Are you sure you want to delete this API key?</h3>
<div>
    <h4>API Key '@Model?.Name'</h4>
    <div>
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Yes" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">No</a>
        </form>
    </div>
</div>

<hr />
@Html.DisplayForModel("ApiKeyDetails")