@using ChuckDeviceController.Data.Entities
@model Device
@{
    ViewData["Title"] = "Create Device";
}

<h1>Create Device</h1>

<p>@Html.ValidationMessage("Device", new { @class = "text-danger" })</p>

<br />
<nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
        <li class="breadcrumb-item"><a asp-controller="Device" asp-action="Index">Devices</a></li>
        <li class="breadcrumb-item active" aria-current="page">Create Device</li>
    </ol>
</nav>

<h4>Device</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Uuid" class="control-label"></label>
                <input asp-for="Uuid" class="form-control" />
                <span asp-validation-for="Uuid" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InstanceName" class="control-label"></label>
                <select asp-for="InstanceName" class="form-control" asp-items="@(new SelectList(ViewBag.Instances, "Name", "Name"))">
                    <option value="">Please select one</option>
                </select>
                <span asp-validation-for="InstanceName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AccountUsername" class="control-label"></label>
                <select asp-for="AccountUsername" class="form-control" asp-items="@(new SelectList(ViewBag.Accounts, "Username", "Username"))">
                    <option value="">Please select one</option>
                </select>
                <span asp-validation-for="AccountUsername" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}