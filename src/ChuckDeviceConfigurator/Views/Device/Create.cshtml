@model Device
@{
    ViewData["Title"] = localizer["Create Device"];
}

<h1>@ViewData["Title"]</h1>

<p>@Html.ValidationMessage("Device", new { @class = "text-danger" })</p>

<br />
@Html.DisplayFor(model => model, "Breadcrumbs", new { Controller = "Device", ControllerText = localizer["Devices"], CurrentPage = localizer["Create Device"] })

<h4>Device</h4>
<hr />
<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-floating mb-3">
        <input asp-for="Uuid" class="form-control" placeholder="@localizer["Device unique identifier"]" />
        <label asp-for="Uuid"></label>
        <span asp-validation-for="Uuid" class="text-danger"></span>
    </div>
    @Html.EditorForModel("EditDeviceDetails")
    <div class="form-group">
        <input type="submit" value="@localizer["Create"]" class="btn btn-primary" />
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}