@model Device
@{
    ViewData["Title"] = "Delete Device " + Model.Uuid;
}

<h1>Delete Device</h1>

<p>@Html.ValidationMessage("Device", new { @class = "text-danger" })</p>

<br />
@Html.DisplayFor(model => model, "Breadcrumbs", new { Controller = "Device", ControllerText = "Devices", CurrentPage = "Delete Device" })

<h3>Are you sure you want to delete this device?</h3>
<div>
    <h4>@Utils.GetDeviceStatus(Model?.LastSeen ?? 0) Device '@Model?.Uuid'</h4>
    <div>
        <form asp-action="Delete">
            <input type="hidden" asp-for="Uuid" />
            <input type="submit" value="Yes" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">No</a>
        </form>
    </div>
</div>

<hr />
@Html.DisplayFor(model => model)