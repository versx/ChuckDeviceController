@model Device
@{
    ViewData["Title"] = localizer["Delete Device {0}", Model.Uuid];
}

<h1>@localizer["Delete Device"]</h1>

<p>@Html.ValidationMessage("Device", new { @class = "text-danger" })</p>

<br />
@Html.DisplayFor(model => model, "Breadcrumbs", new { Controller = "Device", ControllerText = localizer["Devices"], CurrentPage = localizer["Delete Device"] })

<h3>@localizer["Are you sure you want to delete this device?"]</h3>
<div>
    <h4>@Utils.GetDeviceStatus(Model?.LastSeen ?? 0) @localizer["Device"] '@Model?.Uuid'</h4>
    <div>
        <form asp-action="Delete">
            <input type="hidden" asp-for="Uuid" />
            <input type="submit" value="@localizer["Yes"]" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">@localizer["No"]</a>
        </form>
    </div>
</div>

<hr />
@Html.DisplayForModel("DeviceDetails")