@using Microsoft.AspNetCore.Identity
@using ChuckDeviceConfigurator.Data
@using ChuckDeviceConfigurator.Extensions
@using ChuckDeviceController.Extensions.Json
@using ChuckDeviceController.Plugins
@inject SignInManager<ApplicationUser> SignInManager

@{
    var data = Html.RenderAction("GetPluginNavbarHeaders", "Plugin");
    var navbarHeaders = Convert.ToString(data)?.FromJson<List<NavbarHeader>>();
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ChuckDeviceConfigurator</title>

    <link rel="icon" href="~/favicons/chuck.ico" type="image/x-icon" asp-append-version="true" />
    <link rel="apple-touch-icon" href="~/favicons/chuck.gif" sizes="180x180">
    <link rel="icon" href="~/favicons/chuck.png" type="image/png" sizes="32x32">
    <link rel="icon" href="~/favicons/chuck.png" type="image/png" sizes="16x16">
    <link rel="mask-icon" href="~/favicons/chuck.png" color="#5bbad5">

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/datatables/datatables.css" />
    <link rel="stylesheet" href="~/lib/fontawesome-free-6.1.1-web/css/all.css" />
    <link rel="stylesheet" href="~/css/sidebar.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <div class="wrapper">
        <nav id="sidebar">
            <div class="sidebar-header text-center">
                <a href="/" class="navbar-brand">
                    <img src="/favicons/chuck.gif" border="0" height="48">
                    <div class="text-wrap">Chuck Device Configurator</div>
                </a>
            </div>
            <ul class="list-unstyled components">
                <li class="nav-item">
                    <a href="/">
                        <i class="fa-solid fa-fw fa-house"></i>
                        Home
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/Account">
                        <i class="fa-solid fa-fw fa-user"></i>
                        Accounts
                    </a>
                </li>
                <li class="nav-item">
                    <a href="#" data-toggle="collapse" data-bs-toggle="collapse" data-bs-target="#devicesSubmenu" aria-expanded="false" class="dropdown-toggle">
                        <i class="fa-solid fa-fw fa-mobile-alt"></i>
                        Devices
                    </a>
                    <ul class="collapse list-unstyled" id="devicesSubmenu">
                        <li><a href="/Device"><i class="fa-solid fa-fw fa-mobile-alt"></i> Devices</a></li>
                        <li><a href="/DeviceGroup"><i class="fa-solid fa-fw fa-layer-group"></i> Device Groups</a></li>
                    </ul>
                </li>
                <li class="nav-item">
                    <a href="#" data-toggle="collapse" data-bs-toggle="collapse" data-bs-target="#instancesSubmenu" aria-expanded="false" class="dropdown-toggle collpased">
                        <i class="fa-solid fa-fw fa-cubes-stacked"></i>
                        Instances
                    </a>
                    <ul class="collapse list-unstyled" id="instancesSubmenu">
                        <li><a href="/Instance"><i class="fa-solid fa-fw fa-cubes-stacked"></i> Instances</a></li>
                        <li><a href="/Geofence"><i class="fa-solid fa-fw fa-map-marked"></i> Geofences</a></li>
                        <li><a href="/IvList"><i class="fa-solid fa-fw fa-list"></i> IV Lists</a></li>
                    </ul>
                </li>
                <li class="nav-item">
                    <a href="/Plugin">
                        <i class="fa-solid fa-fw fa-puzzle-piece"></i>
                        Plugins
                    </a>
                </li>
                <li class="nav-item">
                    <a href="#" data-toggle="collapse" data-bs-toggle="collapse" data-bs-target="#schedulesSubmenu" aria-expanded="false" class="dropdown-toggle collpased">
                        <i class="fa-solid fa-fw fa-calendar-days"></i>
                        Schedules
                    </a>
                    <ul class="collapse list-unstyled" id="schedulesSubmenu">
                        <li><a href="/Assignment"><i class="fa-solid fa-fw fa-cog"></i> Assignments</a></li>
                        <li><a href="/AssignmentGroup"><i class="fa-solid fa-fw fa-cogs"></i> Assignment Groups</a></li>
                    </ul>
                </li>
                <li class="nav-item">
                    <a href="/Webhook">
                        <i class="fa-solid fa-fw fa-circle-nodes"></i>
                        Webhooks
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/User">
                        <i class="fa-solid fa-fw fa-users"></i>
                        Users
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/Utilities">
                        <i class="fa-solid fa-fw fa-toolbox"></i>
                        Utilities
                    </a>
                </li>
            </ul>
            <ul class="list-unstyled components">
                <li class="nav-item">
                    <a href="/swagger" target="_blank">
                        <i class="fa fa-fw fas fa-file-alt"></i>
                        Swagger API
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/profiler/results" target="_blank">
                        <i class="fa fa-fw fa-chart-bar"></i>
                        Profiler
                    </a>
                </li>
            </ul>
            <partial name="_LoginPartial" />
        </nav>
        <div id="content">
            <button id="sidebarCollapse" type="button" class="navbar-btn" aria-label="Toggle navigation">
                <span></span>
                <span></span>
                <span></span>
            </button>
            <div class="container">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>
        </div>
    </div>

    <div class="container">
        <footer class="d-flex flex-wrap justify-content-between align-items-center py-3 my-4 border-top">
            <p class="col-md-4 mb-0 text-muted">&copy; 2022 - ChuckDeviceController</p>

            <div class="col-md-4 d-flex align-items-center justify-content-center mb-3 mb-md-0 me-md-auto">
                &#10084;&#65039;&nbsp;
                <a asp-controller="Home" asp-action="About" class="text-decoration-none text-muted text-nowrap">
                    In loving memory of Chuckleslove, rest in peace brother
                </a>
            </div>

            <ul class="nav col-md-4 justify-content-end">
                <li class="nav-item">
                    <a class="nav-link px-2 text-muted" href="https://github.com/versx/ChuckDeviceController" target="_blank">
                        <i class="fa-brands fa-github"></i>
                        &nbsp;GitHub
                    </a>
                </li>
            </ul>
        </footer>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/datatables/datatables.min.js"></script>
    <script src="~/lib/datatables-plugins/ellipsis.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

<script>
    // Get current URL path and toggle 'active' class for sidebar and sidebar collapse/expand button
    const pathname = window.location.pathname;
    $('#sidebar > ul > li > a[href="' + pathname + '"]').parent().addClass('active');
    $('#sidebar > ul > li > ul > li > a[href="' + pathname + '"]').parent().addClass('active');
    $('#sidebarCollapse').on('click', function () {
        $('#sidebar').toggleClass('active');
        $(this).toggleClass('active');
    });
</script>