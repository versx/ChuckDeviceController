@using Microsoft.AspNetCore.Identity
@using ChuckDeviceConfigurator.Data
@using ChuckDeviceConfigurator.Extensions
@using ChuckDeviceController.Extensions.Json
@using ChuckDeviceController.Plugins
@inject SignInManager<ApplicationUser> SignInManager

@{
    var data = Html.RenderAction("GetPluginNavbarHeaders", "Plugin");
    var navbarHeaders = Convert.ToString(data)?.FromJson<List<NavbarHeader>>();
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ChuckDeviceConfigurator</title>

    <link rel="icon" href="~/favicons/chuck.ico" type="image/x-icon" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/datatables/datatables.css" />
    <link rel="stylesheet" href="~/lib/fontawesome-free-6.1.1-web/css/all.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/favicons/chuck.gif" alt="Chuck logo" width="28" height="28" />
                    ChuckDeviceConfigurator
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @if (SignInManager.IsSignedIn(User))
                        {
                            if (navbarHeaders != null)
                            {
                                navbarHeaders.Sort((a, b) => a.DisplayIndex.CompareTo(b.DisplayIndex));
                                foreach (var navLink in navbarHeaders)
                                {
                                    var navHeader = (NavbarHeader)navLink;
                                    if (navHeader.IsDropdown && (navHeader?.DropdownItems?.Any() ?? false))
                                    {
                                        var sortedDropdownItems = navHeader.DropdownItems.ToList();
                                        sortedDropdownItems.Sort((a, b) => a.DisplayIndex.CompareTo(b.DisplayIndex));
                                        <li class="nav-item">
                                            <div class="dropdown">
                                                <a href="#" class="nav-link dropdown-toggle text-light" id="dropdownMenuHeader" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                                    @navHeader.Text
                                                </a>
                                                <ul class="dropdown-menu dropdown-menu-dark" aria-labelledby="dropdownMenuHeader">
                                                    @foreach (var dropdownHeader in sortedDropdownItems)
                                                    {
                                                        <li class="nav-item">
                                                            <a class="dropdown-item" asp-area="" asp-controller="@dropdownHeader.ControllerName" asp-action="@dropdownHeader.ActionName">@dropdownHeader.Text</a>
                                                        </li>
                                                    }
                                                </ul>
                                            </div>
                                        </li>
                                    }
                                    else
                                    {
                                        <li class="nav-item">
                                            <a class="nav-link text-light" asp-area="" asp-controller="@navHeader.ControllerName" asp-action="@navHeader.ActionName">@navHeader.Text</a>
                                        </li>
                                    }
                                }
                            }
                        }
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <div class="container">
        <footer class="d-flex flex-wrap justify-content-between align-items-center py-3 my-4 border-top">
            <p class="col-md-4 mb-0 text-muted">&copy; 2022 - ChuckDeviceController</p>

            <div class="col-md-4 d-flex align-items-center justify-content-center mb-3 mb-md-0 me-md-auto">
                &#10084;&#65039;&nbsp;
                <a asp-controller="Home" asp-action="About" class="text-decoration-none text-muted text-nowrap">
                    In loving memory of Chuckleslove, rest in peace brother
                </a>
            </div>

            <ul class="nav col-md-4 justify-content-end">
                <li class="nav-item">
                    <a class="nav-link px-2 text-muted" href="https://github.com/versx/ChuckDeviceController" target="_blank">
                        <i class="fa-brands fa-github"></i>
                        &nbsp;GitHub
                    </a>
                </li>
            </ul>
        </footer>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/datatables/datatables.min.js"></script>
    <script src="~/lib/datatables-plugins/ellipsis.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
