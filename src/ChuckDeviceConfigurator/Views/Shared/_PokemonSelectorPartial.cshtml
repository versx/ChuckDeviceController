@{
    var pokemon = (IEnumerable<dynamic>)(ViewData["Pokemon"] ?? new List<dynamic>());
}

<link rel="stylesheet" href="~/css/pokemon-list.css" />

<div class="form-group">
    <div class="form-floating mb-3">
        <input id="search" class="form-control" placeholder="i.e Pikachu or 25" onkeyup="onPokemonSearch()" data-toggle="tooltip" data-html="true" title="Search by pokemon name and pokedex id." />
        <label for="search">@localizer["Search"]</label>
    </div>
    @localizer["Pokemon"]
    <div id="pokemon-list" name="pokemon-list" class="pokemon-list">
        @foreach (var pkmn in pokemon)
        {
            <div class="pokemon-icon-sprite item @(pkmn.selected ? "active" : "")" style="@(pkmn.selected ? "background-color: dodgerblue;" : "")" id="@pkmn.id" name="@pkmn.name" data-value="@pkmn.id" onclick="onPokemonClicked(this)">
                <img src="@pkmn.image" width="48" height="48" />
                <span class="caption">#@pkmn.pokemonId</span>
            </div>
        }
    </div>
    <br>
    <button type="button" class="btn btn-primary btn-sm" onclick="selectAllPokemon(true);">@localizer["Select All"]</button>
    <button type="button" class="btn btn-primary btn-sm" onclick="selectAllPokemon(false);">@localizer["Select None"]</button>
    <button type="button" class="btn btn-primary btn-sm" onclick="invertSelection();">@localizer["Invert Selection"]</button>
    <div class="btn-group">
        <button type="button" class="btn btn-warning btn-sm dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
            @localizer["Select Generation"]
        </button>
        <ul class="dropdown-menu">
            <li><a href="#" class="dropdown-item" onclick="selectByGen(1);">@localizer["Select Gen1"]</a></li>
            <li><a href="#" class="dropdown-item" onclick="selectByGen(2);">@localizer["Select Gen2"]</a></li>
            <li><a href="#" class="dropdown-item" onclick="selectByGen(3);">@localizer["Select Gen3"]</a></li>
            <li><a href="#" class="dropdown-item" onclick="selectByGen(4);">@localizer["Select Gen4"]</a></li>
            <li><a href="#" class="dropdown-item" onclick="selectByGen(5);">@localizer["Select Gen5"]</a></li>
            <li><a href="#" class="dropdown-item" onclick="selectByGen(6);">@localizer["Select Gen6"]</a></li>
            <li><a href="#" class="dropdown-item" onclick="selectByGen(7);">@localizer["Select Gen7"]</a></li>
            <li><a href="#" class="dropdown-item" onclick="selectByGen(8);">@localizer["Select Gen8"]</a></li>
        </ul>
    </div>
    <button id="select_rare" type="button" class="btn btn-success btn-sm">@localizer["Select Rare"]</button>
    <button id="select_ultra" type="button" class="btn btn-danger btn-sm">@localizer["Select Ultra Rare"]</button>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/js/pokemon-list.js"></script>