@{
    var sw = Context.Items["PageLoadTime"] as System.Diagnostics.Stopwatch;
    sw?.Stop();
    var precision = 4;
    var totalSeconds = Math.Round(sw?.Elapsed.TotalSeconds ?? 0, precision).ToString($"F{precision}");
}
<footer class="d-flex flex-wrap justify-content-between align-items-center my-4 py-3 border-top">
    <p class="col-md-4 mb-0 text-muted">&copy; 2022 - ChuckDeviceController</p>

    <div class="col-md-4 d-flex align-items-center justify-content-center mb-3 mb-md-0 me-md-auto">
        &#10084;&#65039;&nbsp;
        <a asp-controller="Home" asp-action="About" class="text-decoration-none text-muted">
            @localizer["In loving memory of Chuckleslove, rest in peace brother"]
        </a>
    </div>

    <ul class="nav col-md-4 justify-content-end">
        <li class="nav-item">
            <a class="nav-link px-2 text-muted" href="https://github.com/versx/ChuckDeviceController" target="_blank">
                <i class="fa-brands fa-github"></i>
                &nbsp;@localizer["GitHub"]
            </a>
        </li>
    </ul>

    <a asp-controller="Home" asp-action="Privacy" class="text-muted" style="text-decoration: none; color: inherit;">@localizer["Privacy Policy"]</a>
    <span class="text-muted float-end">@localizer["Page took {0}s", @totalSeconds]</span>
</footer>