@using ChuckDeviceConfigurator.ViewModels
@using ChuckDeviceController.Plugins
@model ViewModelsModel<IPlugin>
@{
    ViewData["Title"] = "Plugin Manager";
}

<h1>Plugin Manager</h1>
<br />

<p>
    <a class="btn btn-success btn-sm" asp-action="Upload">Upload</a>
</p>

<table id="table-plugins" class="table table-striped table-bordered dt-responsive nowrap">
    <thead class="table-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Items[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Items[0].Author)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Items[0].Version)
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Items)
        {
            <tr>
                <th scope="row">
                    @Html.DisplayFor(modelItem => item.Name)
                </th>
                <td>
                    @Html.DisplayFor(modelItem => item.Author)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Version)
                </td>
                <td>
                    <div class="dropdown">
                        <button class="btn btn-primary btn-sm dropdown-toggle" type="button" id="dropdownGroup" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="fa-solid fa-bars"></i>
                        </button>
                        <ul class="dropdown-menu" aria-labelledby="dropdownGroup">
                            <li><a class="dropdown-item" asp-action="Disable" asp-route-id="@item.Name"><i class="fa-solid fa-stop"></i>&nbsp;Disable</a></li>
                            @* Enabled: <i class="fa-solid fa-play"></i> *@
                            @* Disabled: <i class="fa-solid fa-stop"></i> *@
                            <li><a class="dropdown-item" asp-action="Reload" asp-route-id="@item.Name"><i class="fa-solid fa-arrows-rotate"></i>&nbsp;Reload</a></li>
                            <li><a class="dropdown-item" asp-action="Details" asp-route-id="@item.Name"><i class="fa-solid fa-circle-info"></i>&nbsp;Details</a></li>
                        </ul>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#table-plugins').DataTable({
                columnDefs: [
                    { orderable: false, targets: 3 },
                ],
                order: [[0, 'asc']],
                stateSave: true,
                searching: true,
                paging: true,
                lengthMenu: [[10, 25, 50, 100, -1], [10, 25, 50, 100, 'All']],
                colReorder:
                {
                    enable: true,
                    fixedColumnsLeft: 1,
                },
                fixedHeader: {
                    header: true,
                },
                responsive: {
                    //breakpoints: '',
                    details: true,
                },
                info: true,
            });
        });
    </script>
}