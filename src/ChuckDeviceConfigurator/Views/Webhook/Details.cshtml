@model Webhook
@{
    ViewData["Title"] = localizer["Webhook Details {0}", Model.Name];
}

<h1>@localizer["Webhook Details"]</h1>

<p>@Html.ValidationMessage("Webhook", new { @class = "text-danger" })</p>

<br />
@Html.DisplayFor(model => model, "Breadcrumbs", new { Controller = "Webhook", ControllerText = localizer["Webhooks"], CurrentPage = localizer["Webhook Details"] })

<div>
    <h4>@localizer["Webhook '{0}'", Model.Name]</h4>
    <div>
        <a asp-action="Edit" asp-route-id="@Model?.Name" class="btn btn-primary">
            <i class="fa-solid fa-pen-to-square"></i>&nbsp;@localizer["Edit"]
        </a>
        <a asp-action="Delete" asp-route-id="@Model?.Name" class="btn btn-danger">
            <i class="fa-solid fa-trash"></i>&nbsp;@localizer["Delete"]
        </a>
    </div>
</div>

<hr />
@Html.DisplayForModel("WebhookDetails")