@model Webhook
@{
    ViewData["Title"] = localizer["Delete Webhook {0}", Model.Name];
}

<h1>@localizer["Delete Webhook"]</h1>

<p>@Html.ValidationMessage("Webhook", new { @class = "text-danger" })</p>

<br />
@Html.DisplayFor(model => model, "Breadcrumbs", new { Controller = "Webhook", ControllerText = localizer["Webhooks"], CurrentPage = localizer["Delete Webhook"] })

<h3>@localizer["Are you sure you want to delete this webhook?"]</h3>
<div>
    <h4>@localizer["Webhook '{0}'", Model.Name]</h4>
    <div>
        <form asp-action="Delete">
            <input type="hidden" asp-for="Name" />
            <input type="submit" value="@localizer["Yes"]" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">@localizer["No"]</a>
        </form>
    </div>
</div>

<hr />
@Html.DisplayForModel("WebhookDetails")