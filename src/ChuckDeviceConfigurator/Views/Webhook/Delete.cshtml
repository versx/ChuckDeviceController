@model Webhook
@{
    ViewData["Title"] = "Delete Webhook " + Model?.Name;
}

<h1>Delete Webhook</h1>

<p>@Html.ValidationMessage("Webhook", new { @class = "text-danger" })</p>

<br />
@Html.DisplayFor(model => model, "Breadcrumbs", new { Controller = "Webhook", ControllerText = "Webhooks", CurrentPage = "Delete Webhook" })

<h3>Are you sure you want to delete this webhook?</h3>
<div>
    <h4>Webhook '@Model?.Name'</h4>
    <div>
        <form asp-action="Delete">
            <input type="hidden" asp-for="Name" />
            <input type="submit" value="Yes" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">No</a>
        </form>
    </div>
</div>

<hr />
@Html.DisplayForModel("WebhookDetails")